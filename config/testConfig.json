{
  "backendUrl": "http://localhost:3008",
  "frontendUrl": "http://localhost:5501",
  "homepageUrl": "http://127.0.0.1:5501/auth.html",
  "customTests": {
    
    "api": [
      {
        "endpoint": "/register",
        "method": "POST",
        "authRequired": false
      },
      {
        "endpoint": "/login",
        "method": "POST",
        "authRequired": false
      }
    ],

    "formTests": [
      {
        "testName": "Form Test (Success): Register user with valid data",
        "endpoint": "/register",
        "method": "POST",
        "payload": { "username": "new_valid_user3", "password": "Password123" },
        "expectedStatus": 201
      },
      {
        "testName": "Form Test (Fail): Register with a short password",
        "endpoint": "/register",
        "method": "POST",
        "payload": { "username": "shortpass", "password": "123" },
        "expectedStatus": 400
      },
      {
        "testName": "Form Test (Failure): Register user with missing password",
        "endpoint": "/register",
        "method": "POST",
        "payload": {"username": "mikasa"},
        "expectedStatus": 400
      }
    ]
 
  }
}